<div class="new-movie-page">
  <div class="container-new-movie container">

    <h3>Add a new Movie</h3>

    <%= form_for @movie do |f| %>
      <br />
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control input', placeholder: 'Enter Movie Name' %>
      </div>

      <%= f.fields_for :directors do |ff| %>
        <div class="form-group">
          <%= ff.text_field :name, class: 'form-control input', placeholder: 'Enter Director Name' %>
        </div>
      <% end %>

      <%= f.fields_for :actors do |ff| %>
        <div class="form-group">
          <%= ff.text_field :name, class: 'form-control input', placeholder: 'Enter Actor Name' %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.text_area :description, class: 'form-control input', placeholder: 'Enter description' %>
      </div>

      <div class="form-group">  
        <%= f.file_field :picture, accept: 'image/jpeg,image/png', class: "form-control-file" %>
      </div>

      <br />
      <div class="form-group">
        <%= f.submit 'Create Movie', class: "btn btn-primary form-control" %>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $('#movie_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>

<style>
body {
    background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('https://cutewallpaper.org/21/movie-collage-wallpapers/I-Love-Wallpapers-Anime,Movies,-Series-Collage.jpg') 0 0 repeat;   
    width: 100%;
    min-height: 100vh; 
}
</style>
